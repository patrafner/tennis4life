<%- include("../partials/header") %>

    <div class="row">
        <h1 style="text-align: center">Edit <%= club.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/clubs/<%= club._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="club[name]" value="<%= club.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="club[image]" value="<%= club.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="club[description]" value="<%= club.description %>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="club[location]" id="location" value="<%= club.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/clubs">Go Back</a>
        </div>
  
</div>

<%- include("../partials/footer") %>