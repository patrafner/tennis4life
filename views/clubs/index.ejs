<%- include("../partials/header") %>

 
     <header class="jumbotron my-jumbo">
         <div class="container">
             <h1>Welcome To Tennis4Life!</h1>
             <p>View our hand-picked tennis clubs from all over the world</p>
             <p>
                <a class="btn btn-primary btn-large" href="/clubs/new">Add New Tennis Club</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% clubs.forEach(function(club){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= club.image %>">
                   <div class="caption">
                       <h4><%= club.name %></h4>
                   </div>
                   <p>
                       <a href="/clubs/<%= club._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>


<%- include("../partials/footer") %>